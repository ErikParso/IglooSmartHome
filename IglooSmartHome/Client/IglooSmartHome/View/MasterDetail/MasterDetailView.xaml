<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IglooSmartHome.View.MasterDetail.MasterDetailView"
             xmlns:pages="clr-namespace:IglooSmartHome.View.MasterDetail"
             Appearing="MasterDetailPage_Appearing"
             IsPresented="{Binding IsMasterVisible, Mode=TwoWay}">
  <MasterDetailPage.Master>
    <pages:MasterView BindingContext="{Binding MasterViewModel}"/>
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <pages:DetailView BindingContext="{Binding DetailViewViewModel}"/>
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>