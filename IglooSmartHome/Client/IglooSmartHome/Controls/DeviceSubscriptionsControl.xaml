<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IglooSmartHome.Controls.DeviceSubscriptionsControl">
    <ContentView.Content>
        <StackLayout Orientation = "Vertical"
             BindableLayout.ItemsSource = "{Binding Subscriptions}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding CustomDeviceName}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="DeviceSubscription_Tapped" CommandParameter="{Binding .}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ContentView.Content>
</ContentView>