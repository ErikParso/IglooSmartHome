<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IglooSmartHome.Controls.DeviceSubscriptionsControl">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0"
                         BindableLayout.ItemsSource = "{Binding Subscriptions}"
                         Orientation="Vertical">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding CustomDeviceName}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="DeviceSubscription_Tapped"
                                    CommandParameter="{Binding .}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <Button Grid.Row="1"
                    Text="Pridať zariadenie"
                    Clicked="ButtonAddDevice_Clicked"/>
        </Grid>
    </ContentView.Content>
</ContentView>