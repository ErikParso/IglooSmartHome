<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IglooSmartHome.Controls.DeviceController">
  <ContentView.Content>
        <Grid>
            <Label HorizontalOptions="Center" VerticalOptions="Center"
                   Text="Home controller is Offline :("
                   FontSize="Medium" TextColor="{StaticResource OfflineColor}"
                   IsVisible="{Binding IsOnline, Converter={StaticResource InverseBoolConverter}}"/>
        </Grid>
    </ContentView.Content>
</ContentView>